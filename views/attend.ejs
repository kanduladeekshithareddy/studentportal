<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>attendance sheet</title>
    <style>
        body{
            background-color: rgb(240, 227, 227);
        }
        table{
            width:50%;
            background-color: rgb(241, 193, 160);
            border-radius: 15px;
            margin-left:25%;
            margin-top:15%;
            box-shadow: 0 0 40px rgba(176, 168, 238, 0.6);
        }
        th,td{
            padding-top: 2%;
            padding-bottom: 2%;
            text-align: center;
        }
        h1{
            font-size: 20px; /* sets the font size to 36 pixels */
            color: #333; /* sets the color to dark grey */
            font-weight: bold; /* makes the text bold */
            text-align: center; /* centers the text */
            text-transform: uppercase; /* converts the text to all uppercase */
            margin-bottom: 20px; /* adds a 20 pixel margin below the heading */
            background-color: #333;
            color: #fff;
            border-radius: 5px;
            padding:2%;
            }
    </style>
</head>
<body>


    <a href="/acedemics"><h1>Attendance</h1></a>    
    <table>
        <tr>
            <th>course id </th>
            <th>Attendance (in %)</th>
        </tr>
        <% items.forEach(function(data) { %>
			<tr>
				<td id ="ci"><%= data.cid %></td>
				<td id="cn"> <%= data.attend %> </td>
			</tr>
		<% }); %>
        <% items.forEach(function(datar) { %>
            <% if (datar.attend === '80') { %>
                <script>
                    alert("You have less attendance <%= datar.cid %> .Please contact your department for further information.");
                 </script>
             <% } %>
         <% }); %>
    </table>
</body>
</html>